
{% extends '_templates/base.njk' %}

{% block page_title %}Discography{% endblock %}

{% block page_description %}Information on Queen's Discography{% endblock %}

{% block content %}
<div class="container">
  <div class="heading"><h1>Queen discography</h1></div>
  <div class="row">
    {% for discography in queen.discography %}
        <div class="col-sm-8 col-md-4 col-lg-2">
        <img src="img/{{ discography.image }}" alt="" class="img-fluid">
        <h2>{{ discography.title }}</h2>
        <h4>{{ discography.year }}</h4>
      </div>
    {% endfor %}
  </div>
{% endblock %}
  </div>