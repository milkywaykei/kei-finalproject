{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ name }}{% endblock %}

{% block page_description %}{{ name }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-md-4">
          <img src="../img/{{ slug }}-bw.jpg" alt="" class="img-fluid mb-4">
      </div>
      <div class="col-sm-8">
          <h1>{{ name }}</h1>
          <p>Member birthplace: {{ tenure }}</p>
          <p>Instruments: {{ instruments }}</p>
          <p>Birthdate: {{ birthdate }}</p>
          <p>Birthplace: {{ birthplace }}</p>
          <p>{{ description | safe }}</p>
      </div>
    </div>
  </article>
{% endblock %}
